# Mylo - AI Video Clipper
# Environment Configuration Template
# 
# Copy this file to .env and populate with your actual values
# This file is committed to version control - DO NOT add secrets here

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/mylo"

# NextAuth Configuration
AUTH_SECRET=""  # Generate with: npx auth secret
NEXTAUTH_URL="http://localhost:3000"

# Cloudinary Configuration (get from cloudinary.com dashboard)
# Sign up at: https://cloudinary.com/users/register_free (no credit card required)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# Modal Backend API
PROCESS_VIDEO_ENDPOINT=""  # Your Modal endpoint URL
PROCESS_VIDEO_ENDPOINT_AUTH=""  # Bearer token for Modal endpoint

# Stripe Configuration
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Inngest Configuration
INNGEST_EVENT_KEY=""
INNGEST_SIGNING_KEY=""

# Optional: Gemini API (used by backend)
GEMINI_API_KEY=""
